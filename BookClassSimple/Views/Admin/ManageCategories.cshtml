@{
    ViewData["Title"] = "List of Categories";
}

<script>
    $(document).ready(function () {
        refreshList();
    });

    function refreshList() {
        $.get("@Url.Action("RefreshCategoryList", "Admin")").done(function (data) {
            $("#list-container").html(data); 
        });
    }
</script>

<div class="container">
    <div class="row">
        <div>
            <h1>List of Categories</h1>
        </div>
        <div class="col-md-12" id="list-container">
        </div>

        <div id="data-modal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div id="data-modal-content" class="modal-content">

                </div>
            </div>
        </div>
    </div>

</div>
