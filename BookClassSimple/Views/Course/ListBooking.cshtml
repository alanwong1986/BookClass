@model ListBookingViewModel
@{
    ViewData["Title"] = "List of Booked Coursesg";
}

<div class="container">
    <div class="row">
        <div>
            <h1>List of Booked Courses</h1>
        </div>
        <div class="col-md-12" id="list-container">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Course</th>
                        <th scope="col">Date</th>
                        <th scope="col">Time</th>
                        <th scope="col">Booking DateTime</th>
                    </tr>
                </thead>
                @foreach (UserRegister reg in Model.UserRegister)
                {
                    <tr>
                        <td scope="col">@reg.CourseTime.CourseDate.Course.Name</td>
                        <td scope="col">@reg.CourseTime.CourseDate.Date</td>
                        <td scope="col">@reg.CourseTime.Time</td>
                        <td scope="col">@reg.CreateDate.ToString("yyyy/MM/dd HH:mm:ss")</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


